<div class="container">
	<div class="row">
		<h1> Edit your profile </h1>
	</div>
	

			
			
<%= form_for @user, :html => { :multipart => true } do |f| %>
  <div class="form-group">
    <label for="exampleInputName">Name</label>
		<%= f.text_field :name,  placeholder: "Name" , class: "form-control f_register" , id: "exampleInputEmail1"%>
  </div>

  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
		<%= f.text_field :email, placeholder: "Email" , class: "form-control f_register" , id: "exampleInputEmail1" %>
	</div>
	
	<div class="form-group">				
    <label for="exampleInputPassword1">Password</label>
		<%= f.password_field :password, placeholder: "Password" ,class: "form-control f_register" , id: "exampleInputEmail1"%>
	</div>

  <div class="form-group">	
    <label for="exampleInputFile">File input</label>
		<%= f.file_field :photo %>
	</div>

		<%= f.submit("Update User", class: "btn btn-success b_login b_login_1") %>
	</div>
<% end %>

