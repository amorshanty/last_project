<!DOCTYPE html>
<html>
<head>
  <title>NowWhat</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<!-- HEADER  -->
	<body>
		<header class="header">
			<div class="container">

				<div class="cat">
					<div class="row">
						<div class="col-sm-8">
							<h1 class= "titulo">N.W?</h1>		
						</div>		

						<!-- BOTONERA -->

						<div class="col-sm-4 botonera">
							<%= link_to "Home", root_path, class: "btn bt-link b_header" %>
							<button type="button" class="btn btn-link b_header">About</button>
							<%= link_to "Categories", categories_path, class: "btn bt-link b_header" %>

							<%if current_user%>
								<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
							  <%= current_user.name %> <span class="caret"></span>
							  </button>
							  <ul class="dropdown-menu" role="menu">
							    <li> <%= link_to user_path(current_user)%> </li>
							    <li class="divider"> </li>
							    <li> <a href="#"> <%= render "users/logout_form" %> </a> </li>
							  </ul>
						</div>
						 
						 <%else%>
								<button type="button" class="btn btn-success b_login" id="myLogin" >login</button>
						 <% end -%>

						 <!-- //BOTONERA -->
						
						</div>
						</div>	
					</div>
				</div>
		</header>
	<!-- HEADER -->

		  


	<%= yield %>

	<!-- //FOOTER  -->	
	<footer class="footer">
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<h6>footer</h6>
				</div>
			</div>
		</div>
	</footer>
	</div>
	<!-- //FOOTER -->
	</body>
</html>
